@model IEnumerable<DoAn.Models.SanPham>

@{
    ViewBag.Title = "ListSPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sản phẩm</h2>
<p>@Html.ActionLink("Create new", "Create")</p>
<table class="table">
    <tr>
        <th>Tên sản phẩm</th>
        <th>Hình ảnh</th>
        <th>Giá</th>
        <th>Dung lượng bộ nhớ</th>
        <th>RAM</th>
        <th>Camera trước</th>
        <th>Camera sau</th>
        <th>Thời gian bảo hành</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@Html.DisplayFor(modelItem => item.tensp)</td>
            <td><img src="@Html.DisplayFor(modelItem => item.hinh)" alt="hinh thumbnail" width="120" /></td>
            <td>@String.Format("{0:0,0}", @item.gia)</td>
            <td>@Html.DisplayFor(modelItem => item.ROM)</td>
            <td>@Html.DisplayFor(modelItem => item.RAM)</td>

            <td>@Html.DisplayFor(modelItem => item.cameratruoc)</td>
            <td>@Html.DisplayFor(modelItem => item.camerasau)</td>
            <td>@Html.DisplayFor(modelItem => item.ngaybaohanh)</td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.masp }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.masp }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.masp })
            </td>

        </tr>
    }

</table>

