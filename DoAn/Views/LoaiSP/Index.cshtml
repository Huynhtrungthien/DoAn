@model IEnumerable<DoAn.Models.LoaiSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách loại sản phẩm</h2>
@Html.ActionLink("Create", "Create", "LoaiSP")
<table border="1px">
    <tr>
        <th>Mã loại hàng</th>
        <th>Tên loại hàng</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.maloai</td>
            <td>@item.tenloai</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.maloai }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.maloai }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.maloai })
            </td>
        </tr>
    }
</table>

